{
  "name": "Cousera Caption",
  "version": "1.1.7",
  "manifest_version": 2,
  "description": "Relayout Coursera Caption",
  "icons": {
    "128": "img/snow-128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/bg.js"]
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "img/snow.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "background",
    "http://*/*",
    "https://*/*" 
  ],
  "content_scripts": [
    {
      "matches": ["*://*.coursera.org/*"],
      "css": ["css/contentstyle.css"],
      "js": [
        "js/lib/jquery.slim.min.js",
        "js/contentscript.js",
        "js/app.min.js"
      ],
      "run_at": "document_end"
    }
  ]
}
